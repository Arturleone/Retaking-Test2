<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#023373"
    >

    <TextView
        android:id="@+id/text_bem_vindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Olá Usuário"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="36dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="A WorldSkills é uma competição global que reúne jovens profissionais de diversas áreas para demonstrar suas habilidades em padrões internacionais. Organizada a cada dois anos, a competição promove a excelência técnica e a troca de conhecimento entre os competidores de diferentes países, incentivando a educação e o treinamento vocacional.

"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_bem_vindo"
        android:fontFamily="@font/montserratalternatessemibold"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="Na modalidade de Desenvolvimento de Aplicativos, os competidores precisam criar soluções mobile inovadoras, usando tecnologias como Kotlin e Android Studio. A prova desafia os participantes a desenvolverem aplicativos funcionais e bem projetados em um curto espaço de tempo, refletindo a demanda do mercado por habilidades técnicas e criativas."
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        tools:layout_editor_absoluteX="0dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserratalternatessemibold"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="216dp"
        android:layout_height="221dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/image"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="168dp"
        android:layout_height="215dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        android:gravity="start"
        android:text="Refrigeração é uma modalidade onde os competidores demonstram sua capacidade de instalar, manter e reparar sistemas de refrigeração. A prova inclui desde o dimensionamento de equipamentos até a aplicação de normas de segurança, exigindo um conhecimento profundo e técnico para garantir o funcionamento eficiente e sustentável dos sistemas."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:textColor="@color/white"
        android:fontFamily="@font/montserratalternatessemibold"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="248dp"
        android:layout_height="195dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/image2"
        tools:layout_editor_absoluteX="81dp"
        android:fontFamily="@font/montserratalternatessemibold"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="A modalidade Automotiva abrange a manutenção e reparo de veículos. Os competidores são testados em áreas como eletrônica automotiva, diagnóstico de falhas e reparo de sistemas mecânicos, destacando a importância da precisão técnica e do conhecimento atualizado sobre novas tecnologias no setor automotivo."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:textColor="@color/white"
        android:fontFamily="@font/montserratalternatessemibold"
        />


</androidx.constraintlayout.widget.ConstraintLayout>